<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout_eq_block"
        android:layout_width="384dp"
        android:layout_height="48dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17000002">

        <EditText
            android:id="@+id/editText_a"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView_x2"
            android:layout_width="166dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="XÂ² +"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editText_b"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView_x"
            android:layout_width="166dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="X +"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editText_c"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView_0"
            android:layout_width="166dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="= 0"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_roots_block"
        android:layout_width="251dp"
        android:layout_height="78dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/linearLayout_eq_block"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_eq_block">

        <TextView
            android:id="@+id/textView_Root_X1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="X1 = 0" />

        <TextView
            android:id="@+id/textView_Root_X2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:text="X2 = 0" />

        <TextView
            android:id="@+id/textView_dis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D = 0" />
    </LinearLayout>

    <Button
        android:id="@+id/button_solve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:text="@string/button_solve"
        android:textColor="@color/white"
        android:textColorHighlight="#c2c2c2"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout_roots_block"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout_roots_block" />

</androidx.constraintlayout.widget.ConstraintLayout>